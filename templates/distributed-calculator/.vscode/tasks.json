{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
      {
        "label": "start-sidecar-additionapp",
        "type": "shell",
        "command": "dapr",
        "args": [
            "run",
            "--app-id", "additionapp",
            "--app-port", "4000",
            "--dapr-http-port", "3505"
        ],
        "isBackground": true,
        "problemMatcher": ["$dapr"]
      },
      {
        "label": "stop-sidecar-additionapp",
        "type": "shell",
        "command": "dapr",
        "args": [
            "stop",
            "--app-id", "additionapp"
        ],
        "problemMatcher": ["$dapr"]
      },
      {
        "label": "start-sidecar-subtractionapp",
        "type": "shell",
        "command": "dapr",
        "args": [
            "run",
            "--app-id", "subtractionapp",
            "--app-port", "5001",
            "--dapr-http-port", "3506"
        ],
        "isBackground": true,
        "problemMatcher": ["$dapr"]
      },
      {
        "label": "stop-sidecar-subtractionapp",
        "type": "shell",
        "command": "dapr",
        "args": [
            "stop",
            "--app-id", "subtractionapp"
        ],
        "problemMatcher": ["$dapr"]
      },
      {
        "label": "start-sidecar-calculatorapp",
        "type": "shell",
        "command": "dapr",
        "args": [
            "run",
            "--app-id", "calculatorapp",
            "--app-port", "8080",
