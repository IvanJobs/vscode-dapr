{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "compounds": [
        {
          "name": "Launch All",
          "configurations": [
            "Launch FrontendApp", "Launch AdditionApp", "Launch SubtractionApp"
          ],
          "stopAll": true
        }
    ],
    "configurations": [
        {
            "name": "Launch CalculatorApp",
            "program": "server.js",
            "request": "launch",
            "cwd": "${workspaceFolder}/src/react-calculator",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "preLaunchTask": "start-sidecar-calculatorapp",
            "postDebugTask": "stop-sidecar-calculatorapp"
        },
        {
            "name": "Launch SubtractionApp",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "${workspaceFolder}\\src\\python-subtraction\\app.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run"
                // "--no-debugger",
                // "--no-reload"
            ],
            "jinja": true,
            "justMyCode": true,
            "preLaunchTask": "start-sidecar-subtractionapp",
            "postDebugTask": "stop-sidecar-subtractionapp"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch AdditionApp",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\src\\node-addition\\app.js",
            "preLaunchTask": "start-sidecar-additionapp",
            "postDebugTask": "stop-sidecar-additionapp"
        }
    ]
}