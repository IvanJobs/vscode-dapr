{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "compounds": [
        {
          "name": "Debug All",
          "configurations": [
            "Launch Calculator in Browser",
            "Attach to CalculatorApp Server",
            "Attach to AdditionApp",
            "Attach to SubtractionApp",
          ],
          "preLaunchTask": "Build & Start Local Services", // Start all local Services, so that we can attach to.
          "stopAll": true
        }
    ],
    "configurations": [
        {
            "name": "Launch Calculator in Browser",
            "type": "msedge",
            "request": "launch",
            "url": "https://localhost:8080",
            "cascadeTerminateToConfigurations": [
                "Attach to Local Services"
            ],
            "presentation": {
                "group": "all",
                "hidden": true
            },
            "internalConsoleOptions": "neverOpen"
        },
        {
            "name": "Attach to CalculatorApp Server",
            "type": "node",
            "request": "attach",
            "port": 8080,
            "restart": true,
            "presentation": {
                "group": "all",
                "hidden": true
            },
            "internalConsoleOptions": "neverOpen"
        },
        {
            "name": "Attach to AdditionApp",
            "type": "node",
            "request": "attach",
            "port": 4000,
            "restart": true,
            "presentation": {
                "group": "all",
                "hidden": true
            },
            "internalConsoleOptions": "neverOpen"
        },
        {
            "name": "Attach to SubtractionApp",
            "type": "node",
            "request": "attach",
            "port": 5001,
            "restart": true,
            "presentation": {
                "group": "all",
                "hidden": true
            },
            "internalConsoleOptions": "neverOpen"
        },
        {
            "name": "Launch CalculatorApp",
            "program": "server.js",
            "request": "launch",
            "cwd": "${workspaceFolder}/src/react-calculator",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "preLaunchTask": "start-sidecar-calculatorapp",
            "postDebugTask": "stop-sidecar-calculatorapp"
        },
        {
            "name": "Launch SubtractionApp",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "${workspaceFolder}\\src\\python-subtraction\\app.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run"
                // "--no-debugger",
                // "--no-reload"
            ],
            "jinja": true,
            "justMyCode": true,
            "preLaunchTask": "start-sidecar-subtractionapp",
            "postDebugTask": "stop-sidecar-subtractionapp"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch AdditionApp",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\src\\node-addition\\app.js",
            "preLaunchTask": "start-sidecar-additionapp",
            "postDebugTask": "stop-sidecar-additionapp"
        }
    ]
}